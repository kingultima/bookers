<div class="index-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <h2>User Info</h2>
          <% if @user.profile_image.present? %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100 %>
                  <% else %>
                  <%= image_tag 'Noimage_image.png', size: '100x100' %>
          <% end %>

<%= render 'books/userinfo', user: @user %>

    <% if @user.id == current_user.id %>
      <div class="row">
          <%=link_to "",edit_user_path(current_user.id), class:"btn btn-default btn-block glyphicon glyphicon-wrench" %>
      </div>
    <% end %>

<%= render 'books/form', book: @book %>

      </div>
      <div class="col-sm-9">
          <h2>Books</h2>

          <table class="table table-striped"">
            <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            </tr>
              <% @books.each do |book| %>
               <tr>
                 <td>
                  <% if @user.profile_image.present? %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50 %>
                  <% else %>
                  <%= image_tag 'Noimage_image.png', size: '50x50' %>
                  <% end %>
                 </td>
                  <td><%= link_to "#{book.title}", book_path(book.id), class:"show_#{book.id}" %></td>
                  <td><%= book.body %></td>
                </tr>
               <% end %>
          </table>
      </div>
    </div>
  </div>
</div>
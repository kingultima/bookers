<div class="show-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">

<%= render 'books/list', books: @books %>

      </div>
      <div class="col-sm-9">
          <h2>Book detail</h2>

          <table class="table table-striped"">
            <tr>
            <th>Title</th>
            <th>Opinion</th>
            </tr>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= "f.attachment_field :profile_image" %>
              <%= "user_path(book.user_id)" %>
            </td>
            <td><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Edit",edit_book_path(book.id), class:"btn btn-success edit_#{book.id}" %></td>
            <td><%= link_to "delete", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-danger" %></td>
          </tr>
          <% end %>
          </table>
      </div>
    </div>
  </div>
</div>
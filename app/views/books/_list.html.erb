        <h2>User Info</h2>
        <%= "attachment_image_tag user, :profile_image, :fill, 100, 100" %>
          <table class="table">
            <tbody>
                <tr>
                  <th><div><strong>name</strong></div></th>
                  <th><%= current_user.name %></th>
                </tr>
                <tr>
                  <th><strong>introduction</strong></th>
                  <th><%= "current_user.introduction" %></th>
                </tr>
            </tbody>
          </table>
            <div class="row">
            <%=link_to "",edit_user_path(current_user.id), class:"btn btn-default btn-block glyphicon glyphicon-wrench" %>
         </div>
         <div>
          <h2>New book</h2>
          <!-- form_for部分 -->
          <%= form_for(@book) do |f| %>
          <% if @book.errors.any? %>
            <div id="error_explanation" class="alert alert-danger">
              <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
              <div class="row">
                <strong>Title</strong>
                <%= f.text_field :title, class:"book_title col-xs-12" %>
              </div>
            <div class="row">
              <strong>Opinion</strong>
              <%= f.text_area :body,class:"book_body col-xs-12" %>
            </div>
            <div class="row">
              <%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>
            </div>
           <% end %>
          </div>
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <div style="margin-left: 50px" class="active navbar-brand">Bookers</div>
        </div>
        <div class="collapse navbar-collapse" id="navbarEexample7">
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to " Home", user_path(current_user.id), class:"glyphicon glyphicon-home" %></li>
              <li><%= link_to " User", users_path, class:"glyphicon glyphicon-user" %></li>
              <li><%= link_to " Book", books_path, class:"glyphicon glyphicon-book" %></li>
              <li><%= link_to " logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out" %></li>
            </ul>
          </div>
          <% else %>
              <li><%= link_to " Home", root_path, class:"glyphicon glyphicon-home" %></li>
              <li><%= link_to " about", about_path, class:"glyphicon glyphicon-link" %></li>
              <li><%= link_to " sign up", new_user_registration_path, class:"glyphicon glyphicon-edit" %></li>
              <li><%= link_to " login", new_user_session_path, class:"glyphicon glyphicon-log-in" %></li>
            <% end %>
      </div>
    </nav>

  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>

    <%= yield %>

    <footer><p>CopyRight Infratop.inc</p></footer>

  </body>
</html>

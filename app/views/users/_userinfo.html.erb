<h2>User Info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: image_path('Noimage_image.png'), size: '100x100' %>
    <table class="table">
        <tbody>
            <tr>
                <th><div><strong>name</strong></div></th>
                <th><%= user.name %></th>
            </tr>
            <tr>
                <th><strong>introduction</strong></th>
                <th><%= user.introduction %></th>
            </tr>
        </tbody>
    </table>
    <% if user.id == current_user.id %>
      <div class="row">
          <%=link_to "",edit_user_path(current_user.id), class:"btn btn-default btn-block glyphicon glyphicon-wrench" %>
      </div>
    <% end %>
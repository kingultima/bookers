<div class="index-page">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User Info</h2>
          <% if @user.profile_image.present? %>
                  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100 %>
                  <% else %>
                  <%= image_tag 'Noimage_image.png', size: '100x100' %>
          <% end %>

<%= render 'users/userinfo', user: @user %>

    <% if @user.id == current_user.id %>
      <div class="row">
          <%=link_to "",edit_user_path(current_user.id), class:"btn btn-default btn-block glyphicon glyphicon-wrench" %>
      </div>
    <% end %>

<%= render 'users/form', book: @book %>

      </div>
      <div class="col-xs-9">
          <h2>Users</h2>

          <table class="table table-striped"">
            <tr>
            <th>image</th>
            <th>name</th>
            </tr>

          <% @users.each do |user| %>
            <tr>
              <td>
               <% if user.profile_image.present? %>
                <%= attachment_image_tag user, :profile_image, :fill, 50, 50 %>
                <% else %>
                <%= image_tag 'Noimage_image.png', size: '50x50' %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user.id) %></td>
            </tr>
          <% end %>


          </table>
      </div>
    </div>
  </div>
</div>
<div class="index-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
       <%= render 'users/userinfo', user: @user %>
        <%= render 'users/form', book: @book %>
      </div>
      <div class="col-sm-9">
        <h2>Books</h2>
          <table class="table table-striped"">
           <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
           </tr>
           <!-- user_idが同じ本だけを出したい -->
           <% @user.books.each do |book| %>
           <tr>
            <td><%= attachment_image_tag @user , :profile_image, :fill, 50, 50, fallback: image_path('Noimage_image.png'), size: '50x50' %>
            </td>
            <td><%= link_to "#{book.title}", book_path(book.id), class:"show_#{book.id}" %></td>
            <td><%= book.body %></td>
           </tr>
           <% end %>
         </table>
      </div>
    </div>
  </div>
</div>
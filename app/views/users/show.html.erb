<div class="index-page">

  <% if flash[:notice] %>
  <p style="margin: 30px"><%= flash[:notice] %></p>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-sm-3">

<%= render 'users/list', users: @users %>

      </div>
      <div class="col-sm-9">
          <h2>Books</h2>

          <table class="table table-striped"">
            <tr>
            <th>Title</th>
            <th>Opinion</th>
            </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
          </table>
      </div>
    </div>
  </div>
</div>